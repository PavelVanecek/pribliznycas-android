<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="KeyguardDoubleLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="BaseBasicButton">
        <item name="android:background">#00000000</item>
    </style>

    <style name="BasicButton" parent="BaseBasicButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="LeftButton" parent="BasicButton">
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="RightButton" parent="BasicButton">
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="BasicText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:singleLine">false</item>
        <item name="android:text">@string/loading_time</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowColor">#A0000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:lines">1</item>
    </style>

    <style name="SingleText" parent="BasicText" />

    <style name="KeyguardText" parent="SingleText">
        <item name="android:textSize">40sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="KeyguardText.Up">
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

    <style name="KeyguardText.Bottom">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">top|center_horizontal</item>
    </style>

    <style name="DoubleText.Up" parent="SingleText">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="DoubleText.Bottom" parent="SingleText">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

</resources>
